
<div class="row">
  <div class="col s8">
    <h4>New price for <%= @medicine.name %></h4>
    <%= simple_form_for(@medicine_cost) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <p>&nbsp;&nbsp;&nbsp;Current cost per unit: <%= number_to_currency(@medicine.current_cost_per_unit/100.0) %></p>
        <p><h6><em>&nbsp;&nbsp;&nbsp;enter new price in terms of cents</em></h6></p>

        <div class="form-inputs">
          <%= f.input :medicine_id, as: :hidden, input_html: { value: @medicine.id } %>
          <%= f.input :cost_per_unit %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>