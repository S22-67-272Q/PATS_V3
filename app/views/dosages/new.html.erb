
<div class="row">
  <div class="col s8">
    <h4>New Dosage:</h4>
    <%= simple_form_for(@dosage) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :medicine_id, collection: Medicine.for_animal(@pet.animal.id).active.alphabetical.to_a, include_blank: true %>
          <%= f.input :units_given, label_html: { class: 'active' } %>
          <%= f.input :discount, label_html: { class: 'active' } %>
          <%= f.input :visit_id, as: :hidden, input_html: { value: @visit.id } %>
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s8">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s4">
    <h4>For Visit:</h4>
    <h5>Date: <%= @visit.date.strftime("%B %d, %Y") %></h5>
    <h5>Pet: <%= @pet.name %> (<%= @pet.animal.name %>)</h5>
  </div>
</div>